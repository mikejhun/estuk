<div class='row'>
  <div class='col-md-6'>
    <%= image_tag @book.image.url(:original), class:'img-responsive' %>
  </div>
  <div class='col-md-6'>
    <h2><%= @book.name %> by <%= @book.author %></h2>
    <p><%= @book.description %></p>
    <h3 class='text-center'>$<%= @book.price.to_f / 100 %></h3>

    <%= form_tag buy_path(slug: @book.slug) do %>
        <form action="" method="POST">
          <script
            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-amount="<%= @book.price %>"
            data-name="eStuk"
            data-description="<%= @book.name %>"
            data-email="<%= current_user.email%>">
          </script>
        </form>
    <% end %>

  </div>
</div>

